{
    "manifest_version": 2,
    "name": "AnimeRecoginition",
    "description": "Anime character detection and recoginition",
    "version": "1.0",

    "background": {
        "scripts" : ["background.js"],
        "persistent" : false
    },
    "browser_action": {
		"default_popup": "main.html",
		"default_title": "Download Images From Google"
	},
    "permissions" : [
        "http://localhost/*", "tabs", "activeTab", "storage","contextMenus","tts","storage",
        "downloads",
        "declarativeContent",
        "http://*/*"
    ]
}